generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuario/Autorizante
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String   // Hash de la contraseña
  role      UserRole // Enum de roles
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relación con visitas autorizadas
  visitasAutorizadas Visit[] @relation("Autorizante")
  visitasCargadas Visit[] @relation("Recepcionista")
  activityLogs ActivityLog[]
}

// Enum para roles de usuario
enum UserRole {
  AUTORIZANTE
  RECEPCIONISTA
  ADMIN
}

// Modelo de Visita
model Visit {
  id                  String   @id @default(uuid())
  nombreVisitante     String
  dniVisitante        String
  empresa             String
  motivo              String
  fechaHoraEstimada   DateTime
  fechaHoraLlegada    DateTime?
  autorizanteId       String
  estado              VisitStatus @default(PRE_AUTORIZADA)
  recepcionistaId     String?
  razonRechazo        String?  // Razón del rechazo si estado es RECHAZADA
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  
  // Relaciones
  autorizante         User     @relation("Autorizante", fields: [autorizanteId], references: [id])
  recepcionista         User?     @relation("Recepcionista", fields: [recepcionistaId], references: [id])
  
  @@index([autorizanteId])
  @@index([estado])
  @@index([fechaHoraEstimada])
  @@index([dniVisitante])
}

// Enum para estados de visita
enum VisitStatus {
  PRE_AUTORIZADA
  PENDIENTE_VALIDACION
  EN_RECEPCION
  APROBADA
  FINALIZADA
  RECHAZADA
}

// Modelo de Activity Log
model ActivityLog {
  id          String   @id @default(uuid())
  userId      String
  action      String   // Acción realizada (GET, POST, PUT, DELETE)
  endpoint    String   // Endpoint consultado
  method      String   // Método HTTP
  statusCode  Int      // Código de respuesta HTTP
  ip          String?  // IP del cliente
  userAgent   String?  // User agent del navegador
  description String?  // Descripción opcional de la acción
  metadata    Json?    // Datos adicionales en formato JSON
  createdAt   DateTime @default(now())
  
  // Relación con usuario
  user        User     @relation(fields: [userId], references: [id])
  
  @@index([userId])
  @@index([action])
  @@index([endpoint])
  @@index([createdAt])
}
